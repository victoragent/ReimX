# ReimX 生产环境配置模板
# 复制此文件为 .env.production 并填入实际值

# ===========================================
# 必需配置
# ===========================================

# 数据库连接 (PostgreSQL)
# 推荐使用 Neon.tech 或 Supabase
DATABASE_URL="postgresql://username:password@host:5432/database_name"

# NextAuth 配置
# 生成强随机密钥: openssl rand -base64 32
NEXTAUTH_SECRET="your-strong-random-secret-key-minimum-32-characters"
NEXTAUTH_URL="https://your-app.vercel.app"

# 邮件服务 (Resend)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# ===========================================
# 推荐配置
# ===========================================

# 管理员配置
ADMIN_EMAIL="admin@yourcompany.com"

# 安全配置
JWT_SECRET="your-jwt-secret-key"

# 功能开关
ENABLE_TELEGRAM_NOTIFICATIONS="true"
ENABLE_EMAIL_NOTIFICATIONS="true"

# Telegram Bot (可选)
TELEGRAM_BOT_TOKEN="1234567890:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"

# ===========================================
# 区块链配置 (可选)
# ===========================================

# Ethereum RPC
ETHEREUM_RPC_URL="https://mainnet.infura.io/v3/your-project-id"

# Solana RPC
SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"

# ===========================================
# 高级配置 (可选)
# ===========================================

# 日志级别
LOG_LEVEL="info"

# 性能配置
ENABLE_CACHE="true"
CACHE_TTL="3600"

# 安全配置
ENABLE_RATE_LIMIT="true"
RATE_LIMIT_WINDOW="900000"
RATE_LIMIT_MAX="100"
